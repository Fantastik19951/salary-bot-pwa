# Backend Environment Variables для Railway

# Порт (Railway автоматически установит)
PORT=8000

# Python версия
PYTHON_VERSION=3.11

# База данных
# Для Railway SQLite (временная, НЕ персистентная):
DATABASE_URL=sqlite:///./salary_bot.db
# Для Railway PostgreSQL (рекомендуется):
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Redis (если добавил Redis сервис в Railway)
REDIS_URL=redis://default:password@redis.railway.internal:6379

# Секретный ключ (ОБЯЗАТЕЛЬНО СМЕНИ!)
SECRET_KEY=CHANGE_ME_TO_RANDOM_32_CHAR_STRING_12345678901234567890

# Telegram Bot (если используешь)
TELEGRAM_BOT_TOKEN=

# Frontend URL (после деплоя фронтенда)
FRONTEND_URL=https://your-frontend.railway.app

# CORS Origins (можно несколько через запятую)
CORS_ORIGINS=https://your-frontend.railway.app,http://localhost:3000

# Режим (production для Railway)
ENVIRONMENT=production
